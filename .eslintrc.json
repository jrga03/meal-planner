{
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["react"],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "16.13.1"
    }
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "react/jsx-curly-spacing": [2, {"when": "never"}],
        "react/display-name": [0]
      }
    }
  ]
}